<%- include('../partials/header.ejs', { pageTitle: 'Create Pet' }) %>

    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/createpet.css">
    <div class="mainContainer">
        <div class="content">

            <center>

                <h1>CREATE PET</h1>
                <form action="/pet/createpet" method="POST">
                    <div id="speciesSelection">

                        <% for(speciesID of Object.keys(species)) { %>

                            <% let specie=species[speciesID]; %>
                            <label class="speciesRadioBox">
                                <img class="speciesImg" src="/public/img/pets/<%= specie.img %>" alt="<%= specie.name %>">
                                <br>
                                <input type="radio" id="speciesID_<%= speciesID %>" name="speciesID" value="<%= speciesID %>" required>
                                <%= specie.name %></label>
                            </label>

                        <% } %>

                    </div>
                    <br><br>
                    <input class="petNameBox" type="text" name="petName" placeholder="Name" minlength="<%= petRules.minNameLength %>" maxlength="<%= petRules.maxNameLength %>" required>
                    <button type="submit">Create</button>
                </form>

            </center>

        </div>
    </div>

    <%- include('../partials/footer.ejs') %>